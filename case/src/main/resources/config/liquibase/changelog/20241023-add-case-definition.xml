<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="booleanFalseValue" value="0" dbms="mysql"/>
    <property name="booleanFalseValue" value="false" dbms="postgresql"/>

    <changeSet id="add-case-definition-1" author="Ritense">
        <createTable tableName="case_definition_2">
            <column name="id" type="${uuidType}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="case_definition_pk"/>
            </column>
            <column name="case_definition_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="semver_version" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-case-definition-2" author="Ritense">
        <addColumn tableName="case_tab">
            <column name="case_definition_id" type="${uuidType}">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>